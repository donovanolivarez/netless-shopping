{{#if check}}
    <h1 style="text-align: center;">{{message}}</h1>
{{/if}}

<div class="container-label">
    <h4>All Items</h4>
</div>

{{#each items}}
    <section class="item-container">

        {{#each this}}
    <figure class="item">
        <figcaption>{{this.itemName}}</figcaption>
        <a href="/item/{{this._id}}/item-detail"><img src="{{ this.imagePath }}" alt="{{this.itemName}} picture, click to view {{this.itemName}}" ></a>
    </figure>
    {{/each}}
</section>
{{/each}}

